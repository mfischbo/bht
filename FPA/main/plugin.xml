<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.bht.fpa.mail.s780486.main.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="FPA Mailer Perspective"
            class="de.bht.fpa.mail.s780486.main.Perspective"
            id="de.bht.fpa.mail.s780486.main.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.bht.fpa.mail.s780486.main.application"
            name="FPA E-Mail Client">
         <property
               name="appName"
               value="FPA E-Mail Client">
         </property>
      </product>
   </extension>

</plugin>
